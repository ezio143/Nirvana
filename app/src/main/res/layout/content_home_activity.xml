<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_home_activity"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:maxHeight="500dp"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

<LinearLayout
    android:id="@+id/app_bar_layout_home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/text_headertext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="R V C JOKES"
        android:textSize="32sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/buzzImageHeight"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_menu_gallery"
        android:id="@+id/image_buzzimage"/>

    <TextView
        android:id="@+id/text_infotext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="that awkward moment"
        android:textAppearance="?android:textAppearanceMedium"

        />

</LinearLayout>
</LinearLayout>
