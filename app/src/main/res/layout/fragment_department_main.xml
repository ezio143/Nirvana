<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9ecf4"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:background="#818181"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_faculty"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:background="#818181"
            android:src="@drawable/ic_add_students" />

        <Button
            android:id="@+id/imgbutton_faculty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:backgroundTint="#717171"
            android:minHeight="90dp"
            android:text="@string/faculty"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/category_profile" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:background="#818181"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_courses"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#818181"
            android:src="@drawable/ic_add_students" />

        <Button
            android:id="@+id/imgbutton_courses"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:backgroundTint="#717171"
            android:minHeight="90dp"
            android:text="@string/text_Courses"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/category_profile" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:background="#818181"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_rooms"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#818181"
            android:src="@drawable/ic_add_students" />

        <Button
            android:id="@+id/imgbutton_Rooms"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:backgroundTint="#717171"
            android:minHeight="90dp"
            android:text="@string/text_rooms"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/category_profile" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:background="#818181"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_labs"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#818181"
            android:src="@drawable/ic_add_students" />

        <Button
            android:id="@+id/imgbutton_labs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:backgroundTint="#717171"
            android:minHeight="90dp"
            android:text="@string/text_labs"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/category_profile" />

    </LinearLayout>

</LinearLayout>

